CREATE TABLE UserPortfolio (
    KeyID INT AUTO_INCREMENT PRIMARY KEY,
    UserID INT NOT NULL,
    Stock VARCHAR(5) NOT NULL,
    Quantity FLOAT NULL,
    FirstBuyDate DATE NULL,
    TotalInvestment FLOAT NULL,
    CurrentPrice FLOAT NULL,
    Profit FLOAT NULL,
    TotalDividend FLOAT NULL,
    FOREIGN KEY (UserID) REFERENCES Users(UserID)
);

INSERT INTO UserPortfolio (UserID, Stock, Quantity, FirstBuyDate, TotalInvestment, CurrentPrice, Profit, TotalDividend)
VALUES 
